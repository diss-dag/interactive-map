    countries.forEach(country => {
      const icon = L.icon({
        iconUrl: country.flag,
        iconSize: [32, 20],
        iconAnchor: [16, 10],
        popupAnchor: [0, -10]
      });

      const marker = L.marker([country.lat, country.lon], { icon }).addTo(map);
      marker.bindPopup(`<b>${country.name}</b><br><a href="${country.video}" target="_blank">Watch video</a>`);
    });
